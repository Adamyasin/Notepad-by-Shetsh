<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/s2">

   <View
       android:id="@+id/view1"
       android:layout_marginTop="15dp"
       android:layout_centerHorizontal="true"
       android:layout_height="150dp"
       android:layout_width="375dp"
       android:background="@drawable/box"
       />

   <com.google.android.material.imageview.ShapeableImageView
       android:id="@+id/imageViewCircle"
       android:layout_width="95dp"
       android:layout_height="95dp"
       android:layout_marginLeft="30dp"
       android:layout_marginTop="40dp"
       android:scaleType="centerCrop"
       app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialComponents.Circle"
       app:srcCompat="@drawable/orter"
       app:strokeColor="@color/s1"
       app:strokeWidth="3dp" />

   <TextView
       android:id="@+id/tv1"
       android:layout_marginTop="45dp"
       android:layout_marginLeft="150dp"
       android:textSize="14sp"
       android:text="Hallo!"
       android:textColor="@color/black"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/tv2"
       android:layout_below="@+id/tv1"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="150dp"
       android:textSize="19sp"
       android:text="Huzell"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/tv3"
       android:layout_below="@+id/view1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="17dp"
       android:layout_marginLeft="25dp"
       android:textStyle="bold"
       android:textSize="24sp"
       android:textColor="@color/black"
       android:text="Category :"/>

   <Button
       android:id="@+id/btn_acc"
       android:layout_below="@+id/tv3"
       android:layout_marginTop="25dp"
       android:layout_width="340dp"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/white"
       android:padding="12dp"
       android:gravity="center_vertical"
       android:elevation="12dp"
       android:text="Notes Account !"
       android:textColor="@color/black"
       android:textSize="16sp"
       android:drawableLeft="@drawable/ic_acc" />

   <Button
       android:id="@+id/btn_log"
       android:layout_below="@+id/btn_acc"
       android:layout_marginTop="25dp"
       android:layout_width="340dp"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/white"
       android:padding="12dp"
       android:gravity="center_vertical"
       android:elevation="10dp"
       android:text="Log !"
       android:textColor="@color/black"
       android:textSize="16sp"
       android:drawableLeft="@drawable/ic_loker" />

   <Button
       android:id="@+id/btn_list"
       android:layout_below="@+id/btn_log"
       android:layout_marginTop="25dp"
       android:layout_width="340dp"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/white"
       android:padding="12dp"
       android:gravity="center_vertical"
       android:elevation="10dp"
       android:text="List !"
       android:textColor="@color/black"
       android:textSize="16sp"
       android:drawableLeft="@drawable/ic_buku" />

</RelativeLayout>
